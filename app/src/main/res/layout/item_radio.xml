<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayoutListRadio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="16sp">

        <LinearLayout
            android:id="@+id/linearLayoutBorderListRadio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewListRadio"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                app:cardCornerRadius="8sp"
                app:cardElevation="0sp"
                app:cardBackgroundColor="@color/listRadio">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16sp">

                    <ImageView
                        android:id="@+id/imageViewRadio"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:paddingLeft="16sp"
                        android:paddingRight="16sp">

                        <TextView
                            android:id="@+id/textViewRadioName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textFontWeight="500"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="Radio name"
                            android:fontFamily="@font/noto_sans_thai_regular"/>

                        <TextView
                            android:id="@+id/textViewPlayStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Now playing"
                            android:textSize="12sp"
                            android:textColor="@color/nowPlayRadio"
                            android:visibility="gone"
                            android:fontFamily="@font/noto_sans_thai_regular"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/imageViewFavoriteAomTest"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="right">
                        <ImageView
                            android:id="@+id/imageViewFavorite"
                            android:layout_gravity="center_vertical"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />
                    </LinearLayout>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>



    </LinearLayout>
